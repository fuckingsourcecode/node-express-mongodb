extends  layout
block title
    title login
block content
    form(onsubmit="return valid()", method='post')
        div.form-group
            label.control-label(for='email') 邮箱
            input#email.form-control(type='email', name='email', placeholder='email', required)
            span#email-warning.alert-warning
        div.form-group
            label.control-label(for='password') 密码
            input#password.form-control(type='password', name='password', placeholder='password', required)
            span#password-warning.alert-warning
        div.form-group
            label.control-label(for='codes') 验证码
            input#codes.form-control(type='text', required)
            span#codes-warning.alert-warning
        input.btn.btn-default(type='submit', value='submit')
        input.btn.btn-default(type='reset', value='reset')
        script(src='/javascripts/loginValidate.js')